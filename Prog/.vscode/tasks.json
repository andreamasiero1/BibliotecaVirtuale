{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Main Project", 
            "type": "shell",
            "command": "qmake && make",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/Prog"
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Clean Main Project",
            "type": "shell", 
            "command": "make clean",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/Prog"
            }
        },
        {
            "label": "Run Main Project",
            "type": "shell",
            "command": "./Prog.app/Contents/MacOS/Prog",
            "group": "test",
            "options": {
                "cwd": "${workspaceFolder}/Prog"
            },
            "dependsOn": "Build Main Project"
        }
    ]
}
